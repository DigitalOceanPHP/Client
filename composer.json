{
    "name"       : "toin0u/digitalocean-v2",
    "type"       : "library",
    "description": "DigitalOcean API v2 PHP 5.4+ library",
    "keywords"   : ["DigitalOcean", "API", "Cloud Hosting", "SSD", "VPS"],
    "homepage"   : "https://github.com/toin0u/DigitalOceanV2",
    "license"    : "MIT",

    "authors": [
        {
            "name"    : "Antoine Corcy",
            "email"   : "contact@sbin.dk",
            "homepage": "http://sbin.dk",
            "role"    : "Developer"
        },
        {
            "name"    : "Yassir Hannnoun",
            "email"   : "yassir.hannoun@gmail.com",
            "homepage": "https://yassirh.com",
            "role"    : "Developer"
        }
    ],

    "support": {
        "issues": "https://github.com/toin0u/DigitalOceanV2/issues",
        "source": "https://github.com/toin0u/DigitalOceanV2"
    },

    "require": {
        "php": "^7.1",
        "ext-json": "*"
    },

    "require-dev": {
        "kriswallsmith/buzz"        : "~0.17",
        "guzzlehttp/guzzle"         : "~6.0",
        "phpspec/phpspec"           : "~5.0",
        "friendsofphp/php-cs-fixer" : "~2.13"
    },

    "suggest": {
        "kriswallsmith/buzz": "To use BuzzAdapter, require kriswallsmith/buzz:~0.17.",
        "guzzlehttp/guzzle" : "To use GuzzleHttpAdapter, require guzzlehttp/guzzle:~6.0."
    },

    "autoload": {
        "psr-4": {
            "DigitalOceanV2\\": "src/"
        }
    },

    "config": {
        "preferred-install": "dist"
    },

    "extra": {
        "branch-alias": {
            "dev-master": "2.2-dev"
        }
    }
}
